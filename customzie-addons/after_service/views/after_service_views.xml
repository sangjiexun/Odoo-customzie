<?xml version="1.0"?>
<odoo>

    <record id="after_service_form_view" model="ir.ui.view">
        <field name="name">after.service.form</field>
        <field name="model">after.service</field>
        <field name="arch" type="xml">
            <form string="After Service" class="o_after_service" delete="false">
            <header>
                <button name="print_after_service" string="Print After Service" type="object" states="done" />
                <button name="button_confirm" type="object" states="draft" string="To Processing" class="oe_highlight"/>
                <button name="button_approve" type="object" states='to approve' string="Approve Order" class="oe_highlight" groups="after_service.after_service_group_manager"/>
                <button name="button_processing" type="object" states='to processing' string="Processing Order" class="oe_highlight" />
                <button name="button_draft"  type="object" states="cancel" string="Set to Draft" />
                <button name="button_cancel" type="object" states="done" string="Cancel" groups="after_service.after_service_group_manager"/>
                <field name="state" widget="statusbar" statusbar_visible="draft,to processing,done" readonly="1"/>
            </header>
            <sheet>
              <div>
                  <h1>
                      <field name="name" />
                  </h1>
              </div>
                <group>
                    <group>
                        <field name="sale_order_filter" attrs="{'readonly':[('state','!=','draft')]}"/>
                        <field name="contact_person" attrs="{'readonly':[('state','!=','draft')]}"/>
                        <field name="sale_order_id" />
                        <field name="sale_order_product" />
                        <field name="defect_remark" attrs="{'invisible':[('defect_remark','==', 'none')]}" />
                        <field name="barcode" />
                    </group>
                    <group>
                        <field name="inquiry_date" attrs="{'readonly':[('state','!=','draft')]}"/>
                        <field name="measure_type" attrs="{'readonly':[('state','!=','draft')]}" options="{'horizontal':true}"/>
                        <field name="sale_order_partner_id" />
                        <field name="sale_order_date" />
                        <field name="order_elapsed_days"/>
                    </group>
                </group>
                <hr />
                <group>
                  <field name="inquiry_note" attrs="{'readonly':[('state','!=','draft')]}" />
                </group>
                <group>
                  <group>
                    <field name="treatment_book_id" attrs="{'readonly':[('state','!=','draft')]}"/>
                  </group>
                </group>
                <group>
                    <field name="treatment_remark" attrs="{'readonly':[('state','!=','draft')]}"/>
                </group>
                <hr attrs="{'invisible':[('state','==','draft')]}"/>
                <group attrs="{'invisible':[('state','==','draft')]}">
                  <group>
                    <field name="returned_date" />
                  </group>
                  <group>
                    <field name="reshipping_date" />
                  </group>
                  <group>
                    <field name="repair_type" widget="many2many_checkboxes" options="{'horizontal':true}"/>
                  </group>
                </group>
                <group attrs="{'invisible':[('state','==','draft')]}">
                  <group>
                    <field name="problem_reason" widget="many2many_checkboxes"/>
                  </group>
                </group>
                <group attrs="{'invisible':[('state','==','draft')]}">
                  <group>
                    <field name="other_reason" />
                  </group>
                  <group>
                  </group>
                </group>
              </sheet>
            <!-- mail mixin fields -->
            <div class="oe_chatter">
            <field name="message_follower_ids" widget="mail_followers" />
            <field name="activity_ids" widget="mail_activity" />
            <field name="message_ids" widget="mail_thread" />
            </div>
            </form>
        </field>
    </record>

    <record id="after_service_tree_view" model="ir.ui.view">
        <field name="name">after.service.tree</field>
        <field name="model">after.service</field>
        <field name="arch" type="xml">
            <tree string="After Service" decoration-muted="state in ('done','cancel')" decoration-info="state=='draft'" decoration-danger="is_defective == True" delete='false'>
                <field name="name"/>
                <field name="sale_order_id" />
                <field name="sale_order_partner_id" />
                <field name="sale_order_product" />
                <field name="treatment_operator" />
                <field name="treatment_book_id" />
                <field name="state"/>
                <field name="is_defective" invisible="1" />
                <field name="create_date" />
            </tree>
        </field>
    </record>

    <record id="after_service_aggregate_tree_view" model="ir.ui.view">
        <field name="name">after.service.aggregate.tree</field>
        <field name="model">after.service</field>
        <field name="arch" type="xml">
            <tree string="After Service Report" create="false" edit="false" delete="false">
              <field name="name"/>
              <field name="sale_order_id" />
              <field name="sale_order_partner_id" />
              <field name="sale_order_product" />
              <field name="treatment_operator" />
              <field name="treatment_book_id" />
              <field name="state"/>
              <field name="is_defective" invisible="1" />
              <field name="create_date" />
            </tree>
        </field>
    </record>

    <record id="repair_type_form_view" model="ir.ui.view">
        <field name="name">repair.type.form</field>
        <field name="model">repair.type</field>
        <field name="arch" type="xml">
            <form string="Repair Type" class="o_repair_type">
            <header>
                <!--field name="state" widget="statusbar" statusbar_visible="draft"/-->
            </header>
            <sheet>
                <group>
                    <field name="name" />
                    <!--<field name="treatment_book" />-->
                </group>
            </sheet>>
            </form>
        </field>
    </record>

    <record id="repair_type_tree_view" model="ir.ui.view">
        <field name="name">repair.type.tree</field>
        <field name="model">repair.type</field>
        <field name="arch" type="xml">
            <tree string="Repair Type" class="o_repair_type">
                <field name="name" />
                <!--<field name="treatment_book" />-->
            </tree>
        </field>
    </record>

     <record id="view_after_service_filter" model="ir.ui.view">
        <field name="name">after.service.list.select</field>
        <field name="model">after.service</field>
        <field name="priority" eval="15"/>
        <field name="arch" type="xml">
            <search string="Search After Service">
                <field name="name" string="After Service"
                  filter_domain="['|','|',('name','ilike',self),('sale_order_id','ilike',self),('sale_order_partner_id','ilike',self),('sale_order_product','ilike',self),('treatment_operator','ilike',self)]"/>
                <field name="sale_order_id" />
                <field name="sale_order_partner_id" />
                <field name="sale_order_product" />
                <field name="treatment_operator" />
                <separator/>
                <filter string="repair" name="treatment_book_repair" domain="[('treatment_book_id','=','修理')]"/>
                <filter string="return" name="treatment_book_return" domain="[('treatment_book_id','=','返品')]"/>
                <separator/>
                <filter string="is_defective" name="is_defective" domain="[('is_defective','=',True)]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Create Date" name="order_date" domain="[]" context="{'group_by':'create_date'}"/>
                </group>
           </search>
        </field>
    </record>

    <!-- Action to open the after service -->
    <record id="action_after_service" model="ir.actions.act_window">
        <field name="name">After Service</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">after.service</field>
        <field name="view_mode">tree,form</field>
        <field name="view_type">form</field>
        <field name="view_id" ref="after_service.after_service_tree_view"/>

    </record>

    <!-- Action to open the after service -->
    <record id="action_after_service_aggregate" model="ir.actions.act_window">
        <field name="name">After Service Aggregate</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">after.service</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="after_service.after_service_aggregate_tree_view"/>
    </record>

    <!-- Action to open the treatment book -->
    <record id="action_repair_type" model="ir.actions.act_window">
        <field name="name">Repair Type</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">repair.type</field>
        <field name="view_mode">tree,form</field>
        <field name="view_type">form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new treatment
            </p>
        </field>
    </record>

    <!-- Top menu item -->
    <menuitem id="after_service_menu_root"
        name="After Service"
        web_icon="after_service,static/description/icon.png"
        sequence="7"/>

    <menuitem id="menu_after_service"
        name="After Service"
        parent="after_service_menu_root"
        action="action_after_service"
        sequence="2"/>

<!--    <menuitem id="menu_repair_type"
        name="Repair type"
        parent="after_service_menu_root"
        action="action_repair_type"
        sequence="3"/>-->

    <menuitem id="menu_after_service_report"
        name="After Service Report"
        parent="after_service_menu_root"
        action="action_after_service_aggregate"
        sequence="3"/>

</odoo>

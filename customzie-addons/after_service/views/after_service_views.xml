<?xml version="1.0"?>
<odoo>

    <record id="after_service_form_view" model="ir.ui.view">
        <field name="name">after.service.form</field>
        <field name="model">after.service</field>
        <field name="arch" type="xml">
            <form string="After Service" class="o_after_service">
            <header>
                <button name="print_after_service" string="Print After Service" type="object" states="draft,to approve,done" />
                <button name="button_confirm" type="object" states="draft" string="Confirm Order" class="oe_highlight" id="bid_confirm"/>
                <button name="button_approve" type="object" states='to approve' string="Approve Order" class="oe_highlight" groups="after_service.after_service_group_manager"/>
                <button name="button_draft" states="cancel" string="Set to Draft" type="object" />
                <button name="button_cancel" states="done" string="Cancel" type="object" groups="after_service.after_service_group_manager"/>
                <field name="state" widget="statusbar" statusbar_visible="draft,to approve,done" readonly="1"/>
            </header>
            <sheet>
                <group>
                    <group>
                        <field name="name" />
                        <field name="order_id" />
                    </group>
                    <group>
                        <field name="barcode" />
                        <field name="treatment_book_id" />
                    </group>
                    <field name="treatment_remark" ref="treatment.book.treatment_book"/>
                </group>
            </sheet>>
            </form>
        </field>
    </record>

    <record id="after_service_tree_view" model="ir.ui.view">
        <field name="name">after.service.tree</field>
        <field name="model">after.service</field>
        <field name="arch" type="xml">
            <tree string="After Service" decoration-muted="state in ('done','cancel')" decoration-info="state=='draft'">
                <field name="name" />
                <field name="order_id" />
                <field name="barcode" />
                <field name="treatment_book_id" />
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="treatment_book_form_view" model="ir.ui.view">
        <field name="name">treatment.book.form</field>
        <field name="model">treatment.book</field>
        <field name="arch" type="xml">
            <form string="Treatment Book" class="o_treatment_book">
            <header>
                <!--field name="state" widget="statusbar" statusbar_visible="draft"/-->
            </header>
            <sheet>
                <group>
                    <field name="name" />
                    <field name="treatment_book" />
                </group>
            </sheet>>
            </form>
        </field>
    </record>

    <record id="treatment_book_tree_view" model="ir.ui.view">
        <field name="name">treatment.book.tree</field>
        <field name="model">treatment.book</field>
        <field name="arch" type="xml">
            <tree string="Treatment Book" class="o_treatment_book">
                <field name="name" />
                <field name="treatment_book" />
            </tree>
        </field>
    </record>


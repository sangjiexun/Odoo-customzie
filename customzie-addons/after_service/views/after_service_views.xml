    <!-- Action to open the after service -->
    <record id="action_after_service" model="ir.actions.act_window">
        <field name="name">After Service</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">after.service</field>
        <field name="view_mode">tree,form</field>
        <field name="view_type">form</field>
        <!--field name="view_id" ref="after.service.after_service_form_view"/>
        <field name="search_view_id" ref="after.service.after_service_view_search"/-->
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new after service
            </p>
        </field>
    </record>

    <!-- Action to open the treatment book -->
    <record id="action_treatment_book" model="ir.actions.act_window">
        <field name="name">Treatment Book</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">treatment.book</field>
        <field name="view_mode">tree,form</field>
        <field name="view_type">form</field>
        <!--field name="view_id" ref="after.service.after_service_form_view"/>
        <field name="search_view_id" ref="after.service.after_service_view_search"/-->
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new treatment
            </p>
        </field>
    </record>


    <!-- Top menu item -->
    <menuitem id="after_service_menu_root"
        name="After Service"
        web_icon="after_service,static/description/icon.png"
        sequence="7"/>

    <menuitem id="menu_after_service"
        name="After Service"
        parent="after_service_menu_root"
        action="action_after_service"
        sequence="2"/>

    <menuitem id="menu_treatment_book"
        name="Treatment Book"
        parent="after_service_menu_root"
        action="action_treatment_book"
        sequence="3"/>
</odoo>
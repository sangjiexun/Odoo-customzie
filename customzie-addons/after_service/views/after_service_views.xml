<?xml version="1.0"?>
<odoo>

    <record id="after_service_form_view" model="ir.ui.view">
        <field name="name">after.service.form</field>
        <field name="model">after.service</field>
        <field name="arch" type="xml">
            <form string="After Service" class="o_after_service" delete="false">
            <header>
                <button name="print_after_service" string="Print After Service" type="object" states="done" />
                <button name="button_confirm" type="object" states="draft" string="To Processing" class="oe_highlight" id="bid_confirm"/>
                <button name="button_approve" type="object" states='to approve' string="Approve Order" class="oe_highlight" groups="after_service.after_service_group_manager"/>
                <button name="button_processing" type="object" states='to processing' string="Processing Order" class="oe_highlight"/>
                <button name="button_draft" states="cancel" string="Set to Draft" type="object" />
                <button name="button_cancel" states="done" string="Cancel" type="object" groups="after_service.after_service_group_manager"/>
                <field name="state" widget="statusbar" statusbar_visible="draft,to processing,done" readonly="1"/>
            </header>
            <sheet>
              <div>
                  <h1>
                      <field name="name" />
                  </h1>
              </div>
                <group>
                    <group>
                        <field name="saleOrderFilter" attrs="{'readonly':[('state','!=','draft')]}"/>
                        <field name="order_id" readonly="1"/>
                        <field name="measure_type" widget="radio" attrs="{'readonly':[('state','!=','draft')]}"/>
                        <field name="partner_name" readonly="1"/>
                    </group>
                    <group>
                        <field name="barcode" readonly="1"/>
                        <field name="defect_remark" readonly="1"/>
                        <field name="sale_send_date" readonly="1"/>
                    </group>
                    <group>
                        <field name="claim_note" attrs="{'readonly':[('state','!=','draft')]}" />
                    </group>
                </group>
                <group>
                    <field name="treatment_book_id" attrs="{'readonly':[('state','=','draft')]}"/>
                    <field name="treatment_remark" ref="treatment.book.treatment_book" attrs="{'readonly':[('state','=','draft')]}"/>
                </group>
            </sheet>
            <!-- mail mixin fields -->
            <div class="oe_chatter">
            <field name="message_follower_ids" widget="mail_followers" />
            <field name="activity_ids" widget="mail_activity" />
            <field name="message_ids" widget="mail_thread" />
            </div>
            </form>
        </field>
    </record>

    <record id="after_service_tree_view" model="ir.ui.view">
        <field name="name">after.service.tree</field>
        <field name="model">after.service</field>
        <field name="arch" type="xml">
            <tree string="After Service" decoration-muted="state in ('done','cancel')" decoration-info="state=='draft'" delete="false">
                <field name="name" />
                <field name="order_id" />
                <field name="barcode" />
                <field name="treatment_book_id" />
                <field name="state"/>
                <field name="create_date" />
            </tree>
        </field>
    </record>

    <record id="after_service_aggregate_tree_view" model="ir.ui.view">
        <field name="name">after.service.aggregate.tree</field>
        <field name="model">after.service</field>
        <field name="arch" type="xml">
            <tree string="After Service Report" create="false" edit="false" delete="false">
                <field name="name" />
                <field name="order_id" />
                <field name="barcode" />
                <field name="treatment_book_id" />
                <field name="state"/>
                <field name="create_date" />
            </tree>
        </field>
    </record>

    <record id="treatment_book_form_view" model="ir.ui.view">
        <field name="name">treatment.book.form</field>
        <field name="model">treatment.book</field>
        <field name="arch" type="xml">
            <form string="Treatment Book" class="o_treatment_book">
            <header>
                <!--field name="state" widget="statusbar" statusbar_visible="draft"/-->
            </header>
            <sheet>
                <group>
                    <field name="name" />
                    <field name="treatment_book" />
                </group>
            </sheet>>
            </form>
        </field>
    </record>

    <record id="treatment_book_tree_view" model="ir.ui.view">
        <field name="name">treatment.book.tree</field>
        <field name="model">treatment.book</field>
        <field name="arch" type="xml">
            <tree string="Treatment Book" class="o_treatment_book">
                <field name="name" />
                <field name="treatment_book" />
            </tree>
        </field>
    </record>

     <record id="view_after_service_filter" model="ir.ui.view">
        <field name="name">after.service.list.select</field>
        <field name="model">after.service</field>
        <field name="priority" eval="15"/>
        <field name="arch" type="xml">
            <search string="Search After Service">
                <field name="name" string="After Service" filter_domain="['|','|',('name','ilike',self),('order_id','ilike',self),('partner_name','ilike',self),('treatment_book_id','ilike',self)]"/>
                <field name="order_id" />
                <field name="partner_name"/>
                <field name="treatment_book_id"/>
                <filter string="waiting" name="treatment_book_waiting" domain="[('treatment_book_id','=','待機')]"/>
                <filter string="return" name="treatment_book_return" domain="[('treatment_book_id','=','返品')]"/>
                <filter string="repair" name="treatment_book_repair" domain="[('treatment_book_id','=','修理')]"/>
                <filter string="exchange" name="treatment_book_exchange" domain="[('treatment_book_id','=','交換')]"/>
                <filter string="treat" name="treatment_book_treat" domain="[('treatment_book_id','=','処置')]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Create Date" name="order_date" domain="[]" context="{'group_by':'create_date'}"/>
                </group>
           </search>
        </field>
    </record>

    <!-- Action to open the after service -->
    <record id="action_after_service" model="ir.actions.act_window">
        <field name="name">After Service</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">after.service</field>
        <field name="view_mode">tree,form</field>
        <field name="view_type">form</field>
        <field name="view_id" ref="after_service.after_service_tree_view"/>

    </record>

    <!-- Action to open the after service -->
    <record id="action_after_service_aggregate" model="ir.actions.act_window">
        <field name="name">After Service Aggregate</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">after.service</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="after_service.after_service_aggregate_tree_view"/>
    </record>

    <!-- Action to open the treatment book -->
    <record id="action_treatment_book" model="ir.actions.act_window">
        <field name="name">Treatment Book</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">treatment.book</field>
        <field name="view_mode">tree,form</field>
        <field name="view_type">form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new treatment
            </p>
        </field>
    </record>

    <!-- Top menu item -->
    <menuitem id="after_service_menu_root"
        name="After Service"
        web_icon="after_service,static/description/icon.png"
        sequence="7"/>

    <menuitem id="menu_after_service"
        name="After Service"
        parent="after_service_menu_root"
        action="action_after_service"
        sequence="2"/>

    <menuitem id="menu_treatment_book"
        name="Treatment Book"
        parent="after_service_menu_root"
        action="action_treatment_book"
        sequence="3"/>

    <menuitem id="menu_after_service_report"
        name="After Service Report"
        parent="after_service_menu_root"
        action="action_after_service_aggregate"
        sequence="4"/>

</odoo>

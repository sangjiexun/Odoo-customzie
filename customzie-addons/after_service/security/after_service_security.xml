<odoo>
	<record id="module_after_service_category" model="ir.module.category">
		<field name="name">After Service</field>
    </record>
		<!-- After Service Operator Group -->
    <record id="after_service_group_operator" model="res.groups">
        <field name="name">After Service Operator</field>
        <field name="category_id" ref="module_after_service_category" />
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]" />
    </record>
		<!-- After Service User Group -->
    <record id="after_service_group_user" model="res.groups">
        <field name="name">After Service User</field>
        <field name="category_id" ref="module_after_service_category" />
        <field name="implied_ids" eval="[(4, ref('after_service_group_operator'))]" />
    </record>
    <!-- After Service Manager Group -->
    <record id="after_service_group_manager" model="res.groups">
        <field name="name">After Service Manager</field>
        <field name="category_id" ref="module_after_service_category" />
        <field name="implied_ids" eval="[(4, ref('after_service_group_user'))]" />
        <field name="users" eval="[
            (4, ref('base.user_root')),
            (4, ref('base.user_admin')) ]" />
    </record>
    <data noupdate="0">
        <record id="after_service_user_rule" model="ir.rule">
            <field name="name">After Service User Access</field>
            <field name="model_id" ref="model_after_service" />
            <field name="domain_force"> [(1,'=',1)]</field>
            <field name="groups" eval="[(4,ref('after_service_group_user'))]" />
        </record>
				<record id="treatment_book_user_rule" model="ir.rule">
            <field name="name">Treatment Book User Access</field>
            <field name="model_id" ref="model_treatment_book" />
            <field name="domain_force"> [(1,'=',1)]</field>
            <field name="groups" eval="[(4,ref('after_service_group_user'))]" />
        </record>
				<record id="repair_type_user_rule" model="ir.rule">
            <field name="name">Repair Type User Access</field>
            <field name="model_id" ref="model_repair_type" />
            <field name="domain_force"> [(1,'=',1)]</field>
            <field name="groups" eval="[(4,ref('after_service_group_operator'))]" />
        </record>
				<record id="problem_reason_user_rule" model="ir.rule">
            <field name="name">Problem Reason User Access</field>
            <field name="model_id" ref="model_problem_reason" />
            <field name="domain_force"> [(1,'=',1)]</field>
            <field name="groups" eval="[(4,ref('after_service_group_operator'))]" />
        </record>
    </data>
</odoo>

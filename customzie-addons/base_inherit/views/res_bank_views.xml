<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_res_bank_form_inherit" model="ir.ui.view">
        <field name="name">res.bank.form.inherit</field>
        <field name="model">res.bank</field>
        <field name="inherit_id" ref="base.view_res_bank_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@class='o_address_format']" position="replace">
                <div class="o_address_format">
                    <field name="country" placeholder="Country" class="o_address_country" options='{"no_open": True, "no_create": True}'/>
                    <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                    <field name="state" class="o_address_state" placeholder="State" options='{"no_open": True}'/>
                    <field name="city" placeholder="City" class="o_address_city"/>
                    <field name="street" placeholder="Street..." class="o_address_street"/>
                    <field name="street2" placeholder="Street 2..." class="o_address_street"/>
                </div>
            </xpath>
        </field>
    </record>

    <record id="view_partner_bank_form_inherit" model="ir.ui.view">
        <field name="name">res.partner.bank.form.inherit</field>
        <field name="model">res.partner.bank</field>
        <field name="inherit_id" ref="base.view_partner_bank_form" />
        <field name="arch" type="xml">
            <xpath expr="//group[position()=1]" position="replace">
                <group>
                    <group>
                        <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
                        <field name="partner_id"/>
                        <field name="bank_id"/>
                        <field name="currency_id" groups="base.group_multi_currency" options="{'no_create': True}"/>
                        <field name="acc_type"/>
                    </group>
                    <group>
                        <field name="branch_name"/>
                        <field name="acc_number"/>
                        <field name="acc_holder_name"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>


    <record id="view_partner_bank_tree_inherit" model="ir.ui.view">
        <field name="name">res.partner.bank.tree.inherit</field>
        <field name="model">res.partner.bank</field>
        <field name="inherit_id" ref="base.view_partner_bank_tree" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='sequence']" position="after">
                <field name="bank_name" position="move"/>
                <field name="branch_name"/>
                <field name="acc_number" position="move"/>
                <field name="acc_holder_name" invisible="1" position="move"/>
                <field name="company_id" groups="base.group_multi_company" position="move"/>
                <field name="partner_id" position="move"/>
            </xpath>
        </field>
    </record>


</odoo>
<odoo>
	<record id="module_momo_category" model="ir.module.category">
		<field name="name">Product Line</field>
    </record>
    <!-- Product Line User Group -->
    <record id="product_line_group_user" model="res.groups">
        <field name="name">Product Line User</field>
        <field name="category_id" ref="module_momo_category" />
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]" />
    </record>
    <!--  Product Line Manager Group -->
    <record id="product_line_group_manager" model="res.groups">
        <field name="name">Product Line Manager</field>
        <field name="category_id" ref="module_momo_category" />
        <field name="implied_ids" eval="[(4, ref('product_line_group_user'))]" />
        <field name="users" eval="[
            (4, ref('base.user_root')),
            (4, ref('base.user_admin')) ]" />
    </record>

    <!-- Product Line Picking User Group -->
    <record id="product_line_picking_group_user" model="res.groups">
        <field name="name">Product Line Picking User</field>
        <field name="category_id" ref="module_momo_category" />
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]" />
    </record>

    <!--  Product Line Picking Manager Group -->
    <record id="product_line_picking_group_manager" model="res.groups">
        <field name="name">Product Line Picking Manager</field>
        <field name="category_id" ref="module_momo_category" />
        <field name="implied_ids" eval="[(4, ref('product_line_picking_group_user'))]" />
        <field name="users" eval="[
            (4, ref('base.user_root')),
            (4, ref('base.user_admin')) ]" />
    </record>

    <!-- Product Line Creator User Group -->
    <record id="product_line_creator_group_user" model="res.groups">
        <field name="name">Product Line Creator User</field>
        <field name="category_id" ref="module_momo_category" />
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]" />
    </record>

    <!--  Product Line Creator Manager Group -->
    <record id="product_line_creator_group_manager" model="res.groups">
        <field name="name">Product Line Creator Manager</field>
        <field name="category_id" ref="module_momo_category" />
        <field name="implied_ids" eval="[(4, ref('product_line_creator_group_user'))]" />
        <field name="users" eval="[
            (4, ref('base.user_root')),
            (4, ref('base.user_admin')) ]" />
    </record>


    <!-- Product Line Creator Detail User Group -->
    <record id="product_line_creator_detail_group_user" model="res.groups">
        <field name="name">Product Line Creator Detail User</field>
        <field name="category_id" ref="module_momo_category" />
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]" />
    </record>

    <!--  Product Line Creator Detail Manager Group -->
    <record id="product_line_creator_detail_group_manager" model="res.groups">
        <field name="name">Product Line Creator Detail Manager</field>
        <field name="category_id" ref="module_momo_category" />
        <field name="implied_ids" eval="[(4, ref('product_line_creator_detail_group_user'))]" />
        <field name="users" eval="[
            (4, ref('base.user_root')),
            (4, ref('base.user_admin')) ]" />
    </record>

    <data noupdate="0">
        <record id="product_line_user_rule" model="ir.rule">
            <field name="name">Product Line User Access</field>
            <field name="model_id" ref="model_momo_product_line" />
            <field name="domain_force"> [(1,'=',1)]</field>
            <field name="groups" eval="[(4,ref('product_line_group_user'))]" />
        </record>
    </data>
</odoo>

<?xml version="1.0"?>
<odoo>
    <record id="product_template_form_view_inherit" model="ir.ui.view">
        <field name="name">product.template.product.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view" />
        <field name="arch" type="xml">
            <field name="type" position="after">
                <field name="maker_name" />
                <field name="maker_product_no" />
            </field>
            <xpath expr="//field[@name='currency_id']" position="before">
                <!--field name="ceo_price" widget='monetary' groups="account.group_account_manager"/-->
                <field name="product_no" />
            </xpath>
            <xpath expr="//field[@name='categ_id']" position="replace">
                <field name="categ_id" invisible="1"/>
            </xpath>
            <!--xpath expr="//group[@name='group_general']" position="after">
                <group name="group_spec">
                    <field name="spec_cpu"/>
                    <field name="spec_memory"/>
                    <field name="spec_hard_disc"/>
                    <field name="spec_driver"/>
                </group>
            </xpath-->
        </field>
    </record>

    <record id="product_template_only_form_view_inherit" model="ir.ui.view">
        <field name="name">product.template.product.form.inherit</field>
        <field name="model">product.template</field>
        <!--field name="mode">primary</field-->
        <field name="priority" eval="8" />
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='barcode']" position="replace">
                <field name="barcode" invisible="1"/>
            </xpath>
        </field>
    </record>

    <record id="product_template_tree_view_inherit" model="ir.ui.view">
        <field name="name">product.template.product.tree.inherit</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="arch" type="xml">
            <field name="categ_id" position="replace">
                <field name="attribute_value_ids" widget="many2many_tags" groups="product.group_product_variant"/>
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="product_template_kanban_produciton_line_view">
        <field name="name">Product Template Kanban Production</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_template_kanban_view"/>
        <field name="arch" type="xml">
            <ul position="inside">
                <field name="attribute_value_ids" widget="many2many_tags" groups="product.group_product_variant"/>
            </ul>
        </field>
    </record>

</odoo>
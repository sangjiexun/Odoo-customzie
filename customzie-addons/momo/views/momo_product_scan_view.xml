<?xml version="1.0"?>
<odoo>
    <data>
        <!-- server action for create product scan -->
        <record id="server_action_product_scan_button" model="ir.actions.server">
            <field name="name">Produt Scan</field>
            <field name="model_id" ref="model_momo_product_scan"/>
            <field name="binding_model_id" ref="model_momo_product_scan"/>
            <field name="state">code</field>
            <field name="code">
                if records:
                action = records.open_popup()
            </field>
        </record>

        <!-- product scan form view -->
        <record id="form_view_product_scan" model="ir.ui.view">
            <field name="name">Product Scan Form View</field>
            <field name="model">momo.product.scan</field>
            <field name="arch" type="xml">
                <form string="Product Scan">
                    <sheet>
                        <group>
                            <field name="id" invisible="1"/>
                            <field name="picking_id" invisible="1"/>
                            <field name="product_line_group_id" invisible="1"/>
                            <field name="picking_name" readonly="1"/>
                            <field name="user_id" readonly="1"/>
                            <field name="scan_barcode" default_focus="1" placeholder="Scan Barcode"/>
                            <field name="error_mess" readonly="1" style="color:red;"/>
                        </group>
                        <field name="scan_lines" widget="one2many_list">
                            <tree string="Scan Line" create="false" editable="bottom">
                                <field name="product_line_id" invisible="1"/>
                                <field name="barcode" readonly="1"/>
                                <field name="product_name" readonly="1"/>
                                <field name="is_defective"/>
                                <field name="product_rank"/>
                                <field name="defective_detail"/>
                            </tree>
                        </field>
                    </sheet>
                    <footer>
                        <button name="scan_over" string="Scan Over" type="object"
                                confirm="Are you sure you want over this scan?" style="background:red;color:white;"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
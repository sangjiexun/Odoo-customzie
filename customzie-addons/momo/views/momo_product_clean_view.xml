<?xml version="1.0"?>
<odoo>
    <data>
        <!-- product clean form view -->
        <record id="form_view_product_clean" model="ir.ui.view">
            <field name="name">Product Clean Form View</field>
            <field name="model">momo.product.clean</field>
            <field name="arch" type="xml">
                <form string="Product Clean">
                    <sheet>
                        <group>
                            <field name="id" invisible="1"/>
                            <field name="is_successful" invisible="1"/>
                            <field name="user_id" readonly="1"/>
                            <field name="scan" default_focus="1" placeholder="Barcode"/>
                            <field name="result_mess" readonly="1" attrs="{'invisible': [('is_successful','!=', False)]}" style="color:red;" />
                            <field name="result_mess" readonly="1" attrs="{'invisible': [('is_successful','!=', True)]}" style="color:black;" />
                        </group>
                        <field name="clean_history_ids" widget="one2many_list">
                            <tree string="Clean History" create="false" editable="bottom">
                                <field name="product_line_id" invisible="1"/>
                                <field name="barcode" readonly="1"/>
                                <field name="product_name" readonly="1"/>
                            </tree>
                        </field>
                    </sheet>
                    <footer>
                    </footer>
                </form>
            </field>
        </record>

        <!-- product clean window action -->
        <record id="window_action_product_clean" model="ir.actions.act_window">
            <field name="name">Product Clean</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">momo.product.clean</field>
            <field name="view_mode">form</field>
            <field name="view_type">form</field>
             <field name="res_id">1</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>
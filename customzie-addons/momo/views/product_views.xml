<?xml version="1.0"?>
<odoo>
    <record id="extra_product_template_form_view" model="ir.ui.view">
        <field name="name">product.product.extra</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='categ_id']" position="after">
                <field name="is_component"/>
                <field name="maker_name" />
                <field name="maker_product_no" />
                <field name="product_no" />
            </xpath>
        </field>
    </record>

    <record id="extra_product_template_template_form_view" model="ir.ui.view">
        <field name="name">product.template.extra</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='categ_id']" position="after">
                <field name="is_component"/>
                <field name="maker_name" />
                <field name="maker_product_no" />
                <field name="product_no" />
            </xpath>
        </field>
    </record>


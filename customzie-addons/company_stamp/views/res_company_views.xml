<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_company_form_company_stamp" model="ir.ui.view">
        <field name="name">res.company.form.company.stamp</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form" />
        <field name="arch" type="xml">
            <xpath expr="//group[@name='social_media']" position="after">
                <group>
                    <field name="company_stamp" widget="image"/>
                </group>
            </xpath>
        </field>
    </record>

    <template id="view_company_stamp_in_after_service_report" inherit_id="after_service.report_after_service_template">
      <xpath expr="//div[@class='col-12 text-center']" position="after">
            <div class="col-12 text-right">
                <img t-if="res_company.company_stamp" t-att-src="image_data_uri(res_company.company_stamp)" style="max-height: 250px;" alt="Stamp"/>
            </div>
            <t t-raw="0"/>
      </xpath>
    </template>

    <template id="view_company_stamp_in_report_saleorder_document" inherit_id="account.report_invoice_document">
      <xpath expr="//div[@class='col-auto mw-100 mb-2']" position="before">
            <div class="col-12 text-right">
                <img t-if="res_company.company_stamp" t-att-src="image_data_uri(res_company.company_stamp)" style="max-height: 250px;" alt="Stamp"/>
            </div>
            <t t-raw="0"/>
      </xpath>
    </template>

    <template id="view_company_stamp_in_report_payment_receipt_document" inherit_id="account.report_payment_receipt_document">
      <xpath expr="//div[@class='row mt64']" position="after">
            <div class="col-12 text-right">
                <img t-if="res_company.company_stamp" t-att-src="image_data_uri(res_company.company_stamp)" style="max-height: 250px;" alt="Stamp"/>
            </div>
            <t t-raw="0"/>
      </xpath>
    </template>


<odoo>
	<record id="module_assemble_category" model="ir.module.category">
		<field name="name">Assemble</field>
    </record>
    <!-- Product Line Operator Group -->
    <record id="assemble_group_operator" model="res.groups">
        <field name="name">Assemble Operator</field>
        <field name="category_id" ref="module_assemble_category" />
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]" />
    </record>
    <!-- Product Line User Group -->
    <record id="assemble_group_user" model="res.groups">
        <field name="name">Assemble User</field>
        <field name="category_id" ref="module_assemble_category" />
        <field name="implied_ids" eval="[(4, ref('assemble_group_operator'))]" />
    </record>

    <!--  Product Line Manager Group -->
    <record id="assemble_group_manager" model="res.groups">
        <field name="name">Assemble Manager</field>
        <field name="category_id" ref="module_assemble_category" />
        <field name="implied_ids" eval="[(4, ref('assemble_group_user'))]" />
        <field name="users" eval="[
            (4, ref('base.user_root')),
            (4, ref('base.user_admin')) ]" />
    </record>
</odoo>

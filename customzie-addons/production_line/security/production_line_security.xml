<odoo>
	<record id="module_production_line_category" model="ir.module.category">
		<field name="name">Production Line</field>
    </record>
    <!-- production User Group -->
    <record id="production_group_user" model="res.groups">
        <field name="name">Production User</field>
        <field name="category_id" ref="module_production_line_category" />
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]" />
    </record>
    <!-- Production Manager Group -->
    <record id="production_group_manager" model="res.groups">
        <field name="name">Production Manager</field>
        <field name="category_id" ref="module_production_line_category" />
        <field name="implied_ids" eval="[(4, ref('production_group_user'))]" />
        <field name="users" eval="[
            (4, ref('base.user_root')),
            (4, ref('base.user_admin')) ]" />
    </record>
    <data noupdate="0">
        <record id="production_user_rule" model="ir.rule">
            <field name="name">Production User Access</field>
            <field name="model_id" ref="model_production_line" />
            <field name="domain_force"> [(1,'=',1)]</field>
            <field name="groups" eval="[(4,ref('production_group_user'))]" />
        </record>
        <record id="production_history_user_rule" model="ir.rule">
            <field name="name">Production History User Access</field>
            <field name="model_id" ref="model_production_history" />
            <field name="domain_force"> [(1,'=',1)]</field>
            <field name="groups" eval="[(4,ref('production_group_user'))]" />
        </record>
    </data>
</odoo>

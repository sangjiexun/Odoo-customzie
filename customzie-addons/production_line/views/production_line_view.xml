<?xml version="1.0"?> 
<odoo>
    <!-- Action to open the production line -->
    <record id="action_operation" model="ir.actions.act_window">
        <field name="name">Operation</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">production.line</field>
        <field name="view_mode">tree,form</field>
        <field name="view_type">form</field>
        <!--field name="view_id" ref="after.service.after_service_form_view"/>
        <field name="search_view_id" ref="after.service.after_service_view_search"/-->
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new production
            </p>
        </field>
    </record>

    <!-- Top menu item -->
    <menuitem id="operation_menu_root"
        name="Operation"
        web_icon="production_line,static/description/icon.png"
        sequence="7"/>

    <menuitem id="menu_operation"
        name="Operation"
        parent="operation_menu_root"
        action="action_operation"
        sequence="2"/>
</odoo>

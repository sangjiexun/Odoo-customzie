<?xml version="1.0"?> 
<odoo>
    <!-- Action to open the production line -->
    <record id="action_operation" model="ir.actions.act_window">
        <field name="name">Operation</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">production.line</field>
        <field name="view_mode">tree,form</field>
        <field name="view_type">form</field>
        <!--field name="view_id" ref="after.service.after_service_form_view"/>
        <field name="search_view_id" ref="after.service.after_service_view_search"/-->
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new production
            </p>
        </field>
    </record>

    <record id="production_operation_action" model="ir.actions.act_window">
        <field name="name">Operation Overview</field>
        <field name="res_model">production.operation</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_type">form</field>
        <field name="view_mode">kanban,form</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Create a new operation type
          </p><p>
            The operation type system allows you to assign each stock
            operation a specific type which will alter its views accordingly.
            On the operation type you could e.g. specify if packing is needed by default,
            if it should show the customer.
          </p>
        </field>
    </record>

    <record model="ir.ui.view" id="production_operation_kanban">
        <field name="name">production.operation.kanban</field>
        <field name="model">production.operation</field>
        <field name="arch" type="xml">
            <kanban class="oe_background_grey o_kanban_dashboard o_account_kanban" create="false">
                <field name="name"/>
                <field name="color"/>
                <field name="sequence"/>
                <field name="count_picking_inventory"/>
                <field name="count_picking_pick"/>
                <field name="count_picking_manufacture"/>
                <field name="count_picking_clean"/>
                <field name="count_picking_delivery"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="#{kanban_color(record.color.raw_value)}" name="production_operation">
                            <div>
                                <div t-attf-class="o_kanban_card_header">
                                    <div class="o_kanban_card_header_title">
                                        <div class="o_primary">
                                            <!--strong class="o_kanban_record_title"><span><t t-esc="record.name.value"/></span></strong-->
                                            <a type="object" name="get_stock_picking_action_picking_type">
                                                <field name="name"/>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                                <div class="container o_kanban_card_content">
                                    <div class="row">
                                        <div class="col-6 o_kanban_primary_left">
                                            <button class="btn btn-primary" name="process" type="object">
                                                <span> To Process <t t-esc="record.count_picking_inventory.raw_value"/></span>
                                            </button>
                                        </div>
                                        <div class="col-6 o_kanban_primary_right">
                                            <div t-if="record.count_picking_inventory.raw_value > 0" class="row">
                                                <div class="col-9">
                                                    <a name="waiting" type="object">
                                                        Waiting
                                                    </a>
                                                </div>
                                                <div class="col-3">
                                                    <field name="count_picking_inventory"/>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                    <t t-name="OperationTop">
                        <div t-attf-class="o_kanban_card_header">
                            <div class="o_kanban_card_header_title">
                                <div class="o_primary">
                                    <a type="object" name="open_action"><field name="name"/></a>
                                </div>
                                <!--div class="o_secondary" t-att-title="dashboard.title">
                                    <field name="type"/>
                                </div-->
                            </div>
                            <!--div class="o_kanban_manage_button_section">
                                <a class="o_kanban_manage_toggle_button" href="#"><i class="fa fa-ellipsis-v" aria-label="Selection" role="img" title="Selection"/></a>
                            </div-->
                        </div>
                    </t>

                </templates>
            </kanban>
        </field>
    </record>

    <record id="operation_inventory_action" model="ir.actions.act_window">
        <field name="name">Operation Inventory</field>
        <field name="res_model">production.operation</field>
        <field name="type">ir.actions.act_window</field>
        <field name="target">new</field>
        <!--field name="view_type">form</field-->
        <field name="view_mode">form</field>
    </record>

    <record model="ir.ui.view" id="production_operation_inventory">
        <field name="name">production.operation.inventory</field>
        <field name="model">production.operation</field>
        <field name="arch" type="xml">
            <form string="Operation Inventory" create="false" edit="false" delete="false">
            <sheet>
                <div>
                    <button type="object"  name="action_view_invoice" string="Inventory" class="oe_highlight" />
                </div>
                <group>
                    <group>
                        <field name="name" />
                        <field name="action_name" />
                    </group>
                    <group>
                        <field name="count_picking_inventory" />
                    </group>
                </group>
                <notebook>
                <field name="production_line">
                    <tree string="Operation Inventory" create="false" edit="false" delete="false">
                        <field name="barcode" />
                        <field name="inventory_name" />
                        <field name="inventory_date" />
                        <field name="inventory_uid" />
                        <field name="purchase_order_id"/>
                    </tree>
                </field>
                </notebook>
            </sheet>
            </form>
        </field>
    </record>

    <!-- Top menu item -->
    <menuitem id="operation_menu_root"
        name="Operation"
        groups="base_inherit.group_operator"
        web_icon="production_line,static/description/icon.png"
        sequence="7"/>

    <menuitem id="menu_operation"
        name="Overview"
        groups="base_inherit.group_operator"
        parent="operation_menu_root"
        action="production_operation_action"
        sequence="2"/>

    <menuitem id="menu_operation_inventory"
        name="Operation Inventory"
        groups="base_inherit.group_operator"
        parent="operation_menu_root"
        action="operation_inventory_action"
        sequence="3"/>

    <menuitem id="menu_operation_pick"
        name="Operation Pick"
        groups="base_inherit.group_operator"
        parent="operation_menu_root"
        action=""
        sequence="4"/>

    <menuitem id="menu_operation_manufacture"
        name="Operation Manufacture"
        groups="base_inherit.group_operator"
        parent="operation_menu_root"
        action="action_operation"
        sequence="5"/>

    <menuitem id="menu_operation_clean"
        name="Operation Clean"
        groups="base_inherit.group_operator"
        parent="operation_menu_root"
        action="action_operation"
        sequence="6"/>

    <menuitem id="menu_operation_delivery"
        name="Operation Delivery"
        groups="base_inherit.group_operator"
        parent="operation_menu_root"
        action="action_operation"
        sequence="7"/>

</odoo>
